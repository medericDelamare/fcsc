{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('js/slick-1.8.1/slick/slick.css') }}"/>
    <link rel="stylesheet" type="text/css" href="{{ asset('js/slick-1.8.1/slick/slick-theme.css') }}"/>
{% endblock %}
{% block body %}
    <div class="container-fluid img-header">
        <div class="row">
            <img src="{{ asset('pictures/home-bandeau.png') }}" class="img-responsive">
        </div>
    </div>
    <div class="container">
        <h1 class="page-header">Bienvenue sur le site officiel du FC Saint-Cloud</h1>

        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Dernières actualités</h2>
            </div>
            <div class="your-class col-lg-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
                {% for actu in actus %}
                    <div class="col-lg-12 text-center">
                        <img class="img-responsive img-portfolio img-hover center-block" src="{{ asset('pictures/Actualites/') }}{{ actu.photo }}" alt="">
                        <a href="{{ path('actualite', {'id': actu.id}) }}"><h2>{{ actu.titre }}</h2></a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Les mots du président : Bernard Delaume</h2>
            </div>
            <div class="col-md-4 text-center">
                <img src="{{ asset('pictures/president.jpg') }}" class="img-responsive img-circle col-md-12" alt="Responsive image">
            </div>
            <div class="col-md-8">
                <p class="text-justify lead">
                    {% autoescape 'html' %}
                        {{ option.motDuPresident|raw }}
                    {% endautoescape %}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Quelques chiffres</h2>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-line-chart" aria-hidden="true"></i> Evolution du nombre de licenciés</h4>
                    </div>
                    <div class="panel-body">
                        <canvas id="myChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-users" aria-hidden="true"></i> Nombre d'équipes</h4>
                    </div>
                    <div class="panel-body">
                        <ul class="list-group">
                            <li class="list-group-item justify-content-between">
                                Veterans
                                <span class="badge badge-veterans badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                Matinaux
                                <span class="badge badge-cdm badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                Seniors
                                <span class="badge badge-senior badge-pill">2</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U19
                                <span class="badge badge-U19 badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U17
                                <span class="badge badge-U17 badge-pill">2</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U15
                                <span class="badge badge-U15 badge-pill">2</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U13
                                <span class="badge badge-U13 badge-pill">3</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U12
                                <span class="badge badge-U12 badge-pill">2</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U11
                                <span class="badge badge-U11 badge-pill">4</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U10
                                <span class="badge badge-U10 badge-pill">4</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U9
                                <span class="badge badge-U9 badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U8
                                <span class="badge badge-U8 badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U7
                                <span class="badge badge-U7 badge-pill">1</span>
                            </li>
                            <li class="list-group-item justify-content-between">
                                U6
                                <span class="badge badge-U6 badge-pill">1</span>
                            </li>
                        </ul>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-calendar" aria-hidden="true"></i> Calendrier des entraînements</h4>
                    </div>
                    <div class="panel-body">
                        <div id='calendar'></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Dernières photos</h2>
            </div>
            {% for photo in photos %}
                {% if loop.index is divisible by(3) %}
                    <div class="row">
                {% endif %}
                <div class="col-md-4 col-lg-4 col-sm-6">
                    <a href="{{ asset('pictures/Accueil/') ~ photo.nom }}" data-toggle="lightbox">
                        <img class="img-responsive img-portfolio img-hover img-accueil" src="{{ asset('pictures/Accueil/') ~ photo.nom }}" alt="">
                    </a>
                </div>
                {% if loop.index is divisible by(3) %}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Nos Partenaires</h2>
            </div>
            <img class="img-responsive img-portfolio img-hover" src="{{ asset('pictures/bandeau_partenaires.png')}}" alt="">
        </div>
    </div>

{% endblock %}
