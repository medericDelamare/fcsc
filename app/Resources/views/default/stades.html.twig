{% extends 'base.html.twig' %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{path('homepage')}}">Accueil</a></li>
        <li class="active">Stades</li>
    </ol>
    <div class = "container">
        <h1 class = "page-header"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Stades</h1>
        {% for stade in stades %}
            <div class = "row">
                <div class = "col-sm-4">
                    <h4><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Adresse</h4>
                    {{ stade.nom }}<br />
                    {{ stade.rue }}<br />
                    {{ stade.codePostal }} {{stade.ville}}<br /><br />
                    <h4><span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> Informations sur l'Ã©quipement sportif</h4>
                    Type : {{ stade.type }}<br />
                    Nature du sol : {{ stade.natureSol }}<br/>
                </div>
                {% if stade.scriptGoogle %}
                    <div class = "col-sm-offset-4 col-sm-4 ">
                        {{ stade.scriptGoogle|raw }}
                    </div>
                {% endif %}
            </div>
            <hr>
        {% endfor %}
    </div>
{% endblock %}