{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet">
{% endblock %}
{% block body %}
    <ol class="breadcrumb">
        <li><a href="index.php">Accueil</a></li>
        <li class="active">Club</li>
    </ol>

    <div class="container">
        <h1 class = "page-header">{{ category }} -<small> {{ nb_u7 + nb_u9 + nb_u11 }} Joueurs ({{ nb_u7 }} U7/{{ nb_u9 }} U9/{{ nb_u11 }} U11)</small></h1>
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Catégorie</th>
                {% if is_granted('ROLE_ADMIN') %}
                    <th>Numéro de téléphone</th>
                {% endif %}
            </tr>
            </thead>
            <tbody>
            {% for joueurs in joueursParCategorie %}
                {% for joueur in joueurs %}
                <tr>
                    <td><strong><a class="nom-effectif" href="{{ path('profile', {'id': joueur.id}) }}">{{ joueur.nom }}</a></strong></td>
                    <td>{{ joueur.prenom }}</td>
                    <td>{{ joueur.categorie }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ joueur.telephonePortable }}</td>
                    {% endif %}
                </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>

    <script >
        $(document).ready( function () {
            $('.table').DataTable({
                "paging": false,
                "bInfo" : false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.16/i18n/French.json"
                },
                "order": false
            });
        } );
    </script>
{% endblock %}