{% extends 'base.html.twig' %}
{% block body %}

<ol class="breadcrumb">
    <li><a href="index.php">Accueil</a></li>
    <li class="active">Résponsables par équipe</li>
</ol>

<div class="container">
    <h1 class = "page-header">Résponsables par catégories</h1>
        <div class="row margin-bottom">
            {% for responsable in responsables %}
            <div class="col-sm-6 col-md-6">
                <div class="panel panel-uscl">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{ responsable.titre }}</h3>
                    </div>
                    <div class="panel-body row">
                        <div class="row">
                            <div class="col-sm-offset-4 col-sm-4 col-xs-offset-4 col-xs-4 text-center">
                                <img src="{{ responsable.licencie.photo }}" class="img-rounded" alt="Responsive image">
                            </div>
                        </div>
                        <div class="row">
                            <div class="text-center">
                                <h4>{{ responsable.licencie.nomComplet }}</h4>
                            </div>
                        </div>
                            <div class="row">
                                <div class="text-center">
                                     <h4><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span> <a href="tel:{{ responsable.licencie.telephonePortable}}">{{ responsable.licencie.telephonePortable}}</a></h4>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
</div>
{% endblock %}